@model CoreLibrary.Models.ViewModels.ViewModel_UsuarioLogin

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h1 class="auth-title">Inicio Sesión</h1>
@* <p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p> *@

<form asp-action="Login" asp-controller="Usuarios" method="post">
	<div class="form-group position-relative has-icon-left mb-4">
		<input asp-for="Correo" type="text" class="form-control form-control-xl" placeholder="Correo" />
		<div class="form-control-icon">
			<i class="bi bi-person"></i>
		</div>
	</div>
	@if (ViewData.ModelState["Correo"]?.Errors.Count > 0)
	{
		<div class="alert alert-danger d-flex align-items-center">
			<i class="bi bi-exclamation-circle me-2"></i>
			@ViewData.ModelState["Correo"]!.Errors[0].ErrorMessage
		</div>
	}
	<div class="form-group position-relative has-icon-left mb-4">
		<input asp-for="Contrasenna" type="password" class="form-control form-control-xl" placeholder="Contraseña" />
		<div class="form-control-icon">
			<i class="bi bi-shield-lock"></i>
		</div>
	</div>
	@if (ViewData.ModelState["Contrasenna"]?.Errors.Count > 0)
	{
		<div class="alert alert-danger d-flex align-items-center">
			<i class="bi bi-exclamation-circle me-2"></i>
			@ViewData.ModelState["Contrasenna"]!.Errors[0].ErrorMessage
		</div>
	}
	<div class="form-check form-check-lg d-flex align-items-end">
		<input asp-for="Recordarme" type="checkbox" class="form-check-input me-2" id="flexCheckDefault" />
		<label asp-for="Recordarme" class="form-check-label text-gray-600" for="flexCheckDefault"></label>
	</div>
	<button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Iniciar Sesión</button>
</form>

<div class="text-center mt-5 text-lg fs-4">
	<p class="text-gray-600">
		¿No tienes una cuenta? <a asp-action="Register" asp-controller="Usuarios"
								  class="font-bold">
			Regístrate
		</a>.
	</p>
	<!-- Falta implementar esto -->
	<p><a class="font-bold" href="auth-forgot-password.html">¿Contraseña Perdida?</a>.</p>
</div>